{# templates/dashboard/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Playlists
{% endblock %}

{% block body %}
	<div class="card mt-1 shadow border-0 mb-4">
		<div class="card-body">
			<div class="container-fluid">
				<div class="d-flex justify-content-between">
					<h2 class="d-flex align-items-center">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-list">
							<line x1="8" y1="6" x2="21" y2="6"></line>
							<line x1="8" y1="12" x2="21" y2="12"></line>
							<line x1="8" y1="18" x2="21" y2="18"></line>
							<line x1="3" y1="6" x2="3.01" y2="6"></line>
							<line x1="3" y1="12" x2="3.01" y2="12"></line>
							<line x1="3" y1="18" x2="3.01" y2="18"></line>
						</svg>
						Playlists
					</h2>

					<div>
						<a class="btn btn-primary" href="{{ path('playlist_new') }}">
							<svg xmlns="http://www.w3.org/2000/svg" class="pe-2" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus-square">
								<rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
								<line x1="12" y1="8" x2="12" y2="16"></line>
								<line x1="8" y1="12" x2="16" y2="12"></line>
							</svg>Create New</a>
					</div>
				</div>

				<p class="text-secondary">Here we represent and create all playlists for Elrnero App. All related changes here will be represented direcly in the Web UI.</p>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr class="text-center">
								<th>ID</th>
								<th>Name</th>
								<th>Created At</th>
								<th>User</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							{% for playlist in playlists %}
								<tr class="text-center">
									<td>{{ playlist.id }}</td>
									<td>{{ playlist.name }}</td>
									<td>{{ playlist.getCreatedAt | date }}</td>
									<td>
										<a href="{{ path('user_show', {'id': playlist.getUser.getid}) }}" target="_blank">
											{{ playlist.getUser.getEmail }}
										</a>
									</td>

									<td class="pt-3" style="font-size: 10px;">
										<a class="nav-link text-primary d-inline-block" href="{{ path('playlist_show', {'id': playlist.id}) }}">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-eye">
												<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
												<circle cx="12" cy="12" r="3"></circle>
											</svg>
										</a>
										<a class="nav-link text-success d-inline-block" href="{{ path('playlist_edit', {'id': playlist.id}) }}">
											<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit">
												<path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
												<path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
											</svg>
										</a>
										<form method="post" action="{{ path('playlist_delete', {'id': playlist.id}) }}" class="d-inline-block" onsubmit="return confirm('Are you sure you want to delete this playlist?');">
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ playlist.id) }}">
											<button type="submit" class="nav-link text-danger">
												<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
													<polyline points="3 6 5 6 21 6"></polyline>
													<path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
													<line x1="10" y1="11" x2="10" y2="17"></line>
													<line x1="14" y1="11" x2="14" y2="17"></line>
												</svg>
											</button>
										</form>

									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
